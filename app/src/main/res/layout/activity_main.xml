<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:overScrollMode="never">

    <RelativeLayout
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUpActivity">


        <ImageView
            android:id="@+id/first_ico"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layerType="software"
            android:src="@drawable/icons"
            android:contentDescription="@string/todo" />

        <LinearLayout
            android:id="@+id/title_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_ico"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_20sdp"
                android:gravity="center"
                android:text="@string/welcome_to_apricot"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_26sdp" />

            <Button
                android:id="@+id/btn_showweb"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:background="@drawable/roundstyle"
                android:drawableStart="@drawable/video"
                android:onClick="goto_webshow"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:text="@string/show_apricot"/>


            <Button
                android:id="@+id/goto_settings"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:drawableStart="@drawable/settings"
                android:onClick="goto_settings"
                android:background="@drawable/roundstyle"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:text="@string/settings"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>